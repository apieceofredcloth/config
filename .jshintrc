// vim: filetype=javascript
/*
config for jshint,
doc: http://www.jshint.com/docs/
*/
{
    "maxerr": 5000,
    "lastsemic": true,
    "undef": true,
    "trailing": true,
    "curly": true,
    "sub": true,
    "jquery": true,
    "node": true,
    "eqeqeq": false,
    "devel": true,
    "browser": true, // This option defines globals exposed by modern browsers
    "boss": false, // This option suppresses warnings about the use of assignments in cases where comparisons are expected.
    "asi": true // suppresses warnings about missing semicolons
}
